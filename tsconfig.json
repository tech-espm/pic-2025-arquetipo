{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2017",
		"lib": ["ES2017", "DOM"],
		"outDir": "src",
		"sourceMap": true,
		"skipLibCheck": true,
		"incremental": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		"public",
		"scss",
		"sql",
		"src",
		"views"
	]
}
